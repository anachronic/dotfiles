# Reload sxhkd
super + Escape
    pkill -USR1 -x sxhkd

# Assume pulseaudio/pipewire
XF86Audio{Raise,Lower}Volume
    pactl set-sink-volume @DEFAULT_SINK@ {+,-}10% && ach-volume-notify

XF86AudioMute
    pactl set-sink-mute @DEFAULT_SINK@ toggle && ach-volume-notify

# Playerctl for audio controls
XF86Audio{Play,Next,Prev}
    playerctl --player=spotify,%any {play-pause,next,previous}

super + Return
    alacritty

super + ctrl + q
    xset s activate

super + ctrl + space
    ach-emoji

super + space
    rofi -show combi -combi-modi "drun,run"

super + shift + E
    prompt "Are you sure you want to exit to tty?" "killall xinit"

super + shift + R
    prompt "Are you sure you want to restart dwm?" "killall dwm"

super + p
    rofi -show run

super + shift + S
    flameshot gui

super + ctrl + s
    flameshot full

super + ctrl + k
    dmenu-kill

super + alt + v
    clipmenuinsert
