# Reload sxhkd
super + Escape
    pkill -USR1 -x sxhkd

# Assume pulseaudio/pipewire
XF86Audio{Raise,Lower}Volume
    pactl set-sink-volume @DEFAULT_SINK@ {+,-}10%

XF86AudioMute
    pactl set-sink-mute @DEFAULT_SINK@ toggle

# Playerctl for audio controls
XF86Audio{Play,Next,Prev}
    playerctl --player=spotify,%any {play-pause,next,previous}

# Super+v emulates macOS paste
# Commented out because sxhkd is not great with @
# This was moved to dwm and will be kept in i3 (if I ever come back to it anyway)
# super + @v
#     superv.sh

# Super+l is Ctrl+L only in chromium, Super+L otherwise
# super + @l
#     superl.sh

super + Return
    alacritty

super + ctrl + q
    xset s activate

super + ctrl + space
    ach-emoji

super + space
    rofi -show run

super + shift + E
    prompt "Are you sure you want to exit to tty?" "killall xinit"

super + shift + R
    prompt "Are you sure you want to restart dwm?" "killall dwm"

super + shift + S
    flameshot gui

super + ctrl + s
    flameshot full

super + ctrl + k
    dmenu-kill

super + alt + v
    clipmenuinsert
