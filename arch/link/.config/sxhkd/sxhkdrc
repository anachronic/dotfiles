# Reload sxhkd
super + Escape
    pkill -USR1 -x sxhkd

# Assume pulseaudio/pipewire
XF86Audio{Raise,Lower}Volume
    pactl set-sink-volume @DEFAULT_SINK@ {+,-}10% && ach-volume-notify

XF86AudioMute
    pactl set-sink-mute @DEFAULT_SINK@ toggle && ach-volume-notify

# Playerctl for audio controls
XF86Audio{Play,Next,Prev}
    playerctl --player=spotify,mpd,%any {play-pause,next,previous}

super + Return
    st

super + ctrl + q
    xset s activate

super + ctrl + space
    ach-emoji

super + space
    bemenu-run -W 0.6 -i -l 20 -c -p "Run >" --fn "JetBrains Mono Nerd Font 32"

super + shift + E
    prompt "Exit to tty?" "killall xinit"

super + shift + R
    ach-reminder

super + ctrl+ R
    prompt "Restart dwm?" "killall dwm"

super + p
    bemenu-run

super + shift + S
    flameshot gui

super + ctrl + s
    flameshot full

super + f
    st -e lf

super + ctrl + k
    ach-kill

