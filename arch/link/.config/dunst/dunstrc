[global]
    # Which monitor should the notifications be displayed on.
    monitor = 0
    follow = mouse
    progress_bar = true
    indicate_hidden = yes
    shrink = no
    transparency = 0
    frame_width = 2
    frame_color = "#89b4fa"
    separator_color = frame

    # Sort messages by urgency.
    sort = yes
    idle_threshold = 120

    ### Text ###

    font = NotoSans 12
    markup = full
    format = "<b>%s</b>\n<span size="smaller">%b</span>"
    alignment = left
    vertical_alignment = center
    show_age_threshold = 60
    word_wrap = yes
    ignore_newline = no
    stack_duplicates = false
    hide_duplicate_count = false
    show_indicators = yes

    ### Icons ###

    # Align icons left/right/off
    icon_position = left
    min_icon_size = 32
    max_icon_size = 32
    icon_path = /usr/share/icons/Adwaita/32x32/status/:/usr/share/icons/Adwaita/32x32/devices/:/usr/share/icons/Adwaita/32x32/legacy/

    ### History ###
    sticky_history = yes
    history_length = 20

    ### Misc/Advanced ###
    dmenu = /usr/bin/bemenu -p dunst:
    browser = /usr/bin/firefox
    always_run_script = true
    title = Dunst
    class = Dunst
    corner_radius = 10
    ignore_dbusclose = false

    ### Wayland ###
    force_xwayland = false

    ### mouse
    mouse_left_click = do_action, close_current
    mouse_middle_click = close_all
    mouse_right_click = close_current

[experimental]
    per_monitor_dpi = false

[urgency_low]
    background = "#1e1e2e"
    foreground = "#cdd6f4"
    timeout = 2
    #icon = /path/to/icon

[urgency_normal]
    background = "#1e1e2e"
    foreground = "#cdd6f4"
    timeout = 5
    #icon = /path/to/icon

[urgency_critical]
    background = "#1e1e2e"
    foreground = "#cdd6f4"
    frame_color = "#fab387"
    timeout = 0
    #icon = /path/to/icon
