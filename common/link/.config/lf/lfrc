# Preview images with lf-ueberzug
set previewer lf-ueberzug-previewer
set cleaner lf-ueberzug-cleaner

set shell sh
set icons true
set shellopts '-eu'
set ifs "\n"
set scrolloff 10

cmd yank-path ${{
    printf '%s' "$fx" | xclip -i -selection clipboard

    paths=$(echo "$fx" | wc -l)
    plural=$([ "1" -eq "$paths" ] && echo "path" || echo "paths")
    dunstify -a lf "lf" "copied $paths $plural to clipboard" -t 1700 -u low -i /usr/share/icons/breeze-dark/apps/48/klipper.svg
}}

cmd open ${{
    case $(file --mime-type $f -bL) in
        text/*|application/json) $EDITOR "$f";;
        *) xdg-open "$f";;
    esac
}}

# make sure trash folder exists
%mkdir -p ~/.trash

# define a custom 'delete' command
cmd delete ${{
    trash-put $fx

    files=$(echo "$fx" | wc -l)
    plural=$([ "1" -eq "$files" ] && echo "file" || echo "files")
    dunstify -a lf "lf" "Deleted $files $plural." -i /usr/share/icons/breeze-dark/places/96/user-trash.svg -t 1700 -u low
}}

cmd movehere ${{
    mv $fx $PWD

    files=$(echo "$fx" | wc -l)
    plural=$([ "1" -eq "$files" ] && echo "file" || echo "files")
    dunstify -a lf "lf" "Moved $files $plural to $PWD" -i /usr/share/icons/breeze-dark/places/96/user-trash.svg -u low
}}

# extract the current file with the right command
cmd extract ${{
    set -f
    case $f in
        *.tar.bz|*.tar.bz2|*.tbz|*.tbz2) tar xjvf $f;;
        *.tar.gz|*.tgz) tar xzvf $f;;
        *.tar.xz|*.txz) tar xJvf $f;;
        *.zip) unzip $f;;
        *.rar) unrar x $f;;
        *.7z) 7z x $f;;
    esac
}}

cmd tar ${{
    set -f
    mkdir $1
    cp -r $fx $1
    tar czf $1.tar.gz $1
    rm -rf $1
}}

cmd zip ${{
    set -f
    mkdir $1
    cp -r $fx $1
    zip -r $1.zip $1
    rm -rf $1
}}

# chmod
cmd chmod ${{
  printf "chmod args: "
  read ans

  for file in "$fx"
  do
    chmod $ans $file
  done

  lf -remote 'send reload'
}}


map r rename
map Y yank-path
map o open
map D delete
map gg top
map . set hidden!
map Z extract
map M movehere
map <enter> open

# locations
map gh cd ~
map g. cd ~/dotfiles
map gs cd ~/sawa
map gd cd ~/downloads
map gv cd ~/videos
map gc cd ~/.config
map gb cd ~/.local/bin
map gf cd ~/forks
map gi cd ~/pictures
map gn cd ~/dotfiles/common/link/.config/nvim
map gl cd ~/dotfiles/common/link/.config/lf
