[alias]
    co = checkout
    br = branch
    up = pull --rebase
    ci = commit
    st = status
    root = rev-parse --show-toplevel
    cl = clone
    amend = commit --amend --verbose
    force = push --force-with-lease
    oneline = log --pretty='format:%C(auto)%h%Creset %s%C(auto)%d%Creset %C(magenta bold)(%cr)%Creset %C(cyan)<%aN>%Creset'

    # cherry-pick
    cp = cherry-pick

    # stash
    z = stash
    zp = stash pop

    # rebasing
    rb = rebase
    rbc = rebase --continue
    rba = rebase --abort
[commit]
    excludesfile = ~/.gitignore
[user]
    name = Nicol√°s Salas
    email = nsalas@fastmail.com
[init]
    defaultBranch = main
[gpg]
    program = gpg
[pull]
    rebase = true
