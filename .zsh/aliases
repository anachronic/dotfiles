# -*- mode: sh; -*-
# vim redefs
alias vi='nvim'
alias vim='nvim'

# TUI shortcuts
alias lg='lazygit'

# SSH. I've been suffering with this lately
alias ssh='TERM=xterm-256color ssh'

# Navigation
# Turns out macOS uses BSD version of ls and Linux uses GNU. I'm gonna set the
# CLICOLOR variable in .zshenv for mac and keep the --color=auto for Linux
alias ls='ls --color=auto'
alias l='ls -lhF --color=auto'
alias la='ls -alhF --color=auto'
alias ..='cd ..'

# git and any vc commands
alias gcl='git clone'
alias gst='git status'
alias gc='git commit --verbose'
alias gup='git pull --rebase'
alias gp='git push'
alias gpf='git push --force'
alias gco='git checkout'
alias gc='git commit'
alias gca='git commit --amend'
alias groot='cd $(git rev-parse --show-toplevel)'
alias glog='git log --pretty=oneline --abbrev-commit'
alias ga='git add'
alias gaa='git add -A'

# npm
alias nls='npm list --depth=0'

# pacman & AUR
alias pacin='sudo pacman -S'
alias pacrem='sudo pacman -R'
alias pacloc='pacman -Qs'
alias pacupg='sudo pacman -Syu'
alias pacupd='sudo pacman -Sy'
alias pacq='pacman -Ss'

## AUR with AURMAN
alias aurin='aurman -S --noedit'
alias aurq='aurman --aur -Ss'

## AUR with YAY
alias yayin='yay -S'
alias yayq='yay -Ss'

## Ubuntu & Ubuntu-based
alias aptin='sudo apt install'
alias aptupd='sudo apt update'
alias aptupg='sudo apt upgrade'
alias aptq='apt-cache search'
alias aptlist='apt list --installed'
alias aptrem='sudo apt remove'

# configs
alias dotfiles='cd ~/dotfiles'
alias forks='cd ~/forks'

# reloads
alias so='source ~/.zshrc'

# python shortcuts
alias pac='source env/bin/activate'

# Node
alias rst='BROWSER=none yarn start'
alias nrt='npm run test -- '
alias nrd='npm run dev -- '

#vim:ft=sh
