[colors]
;background = ${xrdb:color0:#222}
background = #222
background-alt = #444
;foreground = ${xrdb:color7:#222}
foreground = #dfdfdf
foreground-alt = #555
primary = #ffb52a
secondary = #e60053
alert = #bd2c40
general-underline = #0075a3

[bar/ach]
;monitor = ${env:MONITOR:HDMI-1}
width = 100%
height = 44
offset-x = 0
offset-y = 0
radius = 0.0
fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

border-size = 0
border-color = #00000000

padding-left = 0
padding-right = 2
padding-top = 2
padding-bottom = 2

module-margin-left = 1
module-margin-right = 2

font-0 = NotoSansDisplay Nerd Font:style=Semibold:pixelsize=18;1
font-1 = NotoColorEmoji:fontformat=truetype:scale=7:antialias=false;
font-2 = NotoSans:pixelsize=18:weight=bold;1
font-4 = feather:style=Medium:size=12;3

modules-left = i3 xwindow
modules-center =
modules-right = btsink filesystem pulseaudio xkeyboard memory cpu wlan eth temperature dunst date

tray-position = right
tray-padding = 2
tray-maxsize = 32

wm-restack = i3

